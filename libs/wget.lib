# Wget - download files via wget
#
# $1 - URL to download
# $2 - path where to store the file (optional)

WGET_FILE() {
	EXTRA_DEBUG "Downloading" "$1"
	if [ "$DOWNLOAD_VERBOSE" = "1" ];then
		local OPTIONS=" --verbose"
	else
		local OPTIONS=" --quiet"
	fi
	
	if [ "$2" ];then
		wget $OPTIONS "$1" -P "$2" || EXTRA_ERROR "Unable to download" "$1"
	else
		wget $OPTIONS "$1" || EXTRA_ERROR "Unable to download" "$1"
	fi
}

WGET_DIR() {
	EXTRA_DEBUG "Downloading" "$1"
	if [ "$DOWNLOAD_VERBOSE" = "1" ];then
		local OPTIONS=" -m --verbose"
	else
		local OPTIONS=" -m --quiet"
	fi
	
	if [ "$2" ];then
		wget $OPTIONS "$1" -P "$2" || EXTRA_ERROR "Unable to download" "$1"
	else
		wget $OPTIONS "$1" || EXTRA_ERROR "Unable to download" "$1"
	fi
}