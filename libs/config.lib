# Config - simple config parser

CONFIG_GET() {
	local found="$(grep "$2=" "$1")"
	# Strip $2 (search string) and = (the equal sign)
	found=${found#$2\=}
	# Strip double quotes
	found=${found//\"/}
	# Strip single quotes
	found=${found//\'/}
		
	echo "$found"
}

