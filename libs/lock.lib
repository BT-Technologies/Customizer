# Lock - lock fles or folder and check if locked

# Optional $FORCE

# $1 - file/directory to lock/check/unlock
# $2 - whether to be silent (no messages)
LOCK() {
	if [ -e "$1" ];then
		local lock="${1}.lock"
		EXTRA_DEBUG "File lock" "$lock"
		if [ -e "$lock" ];then
			if [ ! "$2" = "quite" ];then
				WARNING "$1 is already locked"
			fi
			return 1
		else
			if [ ! "$2" = "quite" ];then
				EXTRA_INFO "Locking" "$1"
			fi
			touch "$lock" || ERROR "Unable to lock: $1"
			return 0
		fi
	else
		WARNING "The file/directory doesn't exists: $1"
	fi
}

CHECK_LOCK() {
	if [ -e "$1" ];then
		local lock="${1}.lock"
		DEBUG "$lock"
		if [ "$FORCE" = "1" ];then
            EXTRA_WARNING "Lock check skipped for" "$1"
        elif [ -e "$lock" ];then
			if [ ! "$2" = "quite" ];then
				WARNING "$1 is locked by another process"
                exit 1
            fi
		else
			if [ "$2" != "quite" ];then
				INFO "$1 is not locked"
			fi
		fi
	else
		WARNING "The file/directory doesn't exists: $1"
	fi	
}

UNLOCK() {
	if [ -e "$1" ];then
		local lock="${1}.lock"
		if [ -e "$lock" ];then
			if [ ! "$2" = "quite" ];then
				EXTRA_INFO "Unlocking" "$1"
			fi
			rm -f "$lock"
			return 1
		else
			if [ ! "$2" = "quite" ];then
				INFO "$1 is not locked"
			fi
			return 0
		fi
	else
		WARNING "The file/directory doesn't exists: $1"
	fi
}
