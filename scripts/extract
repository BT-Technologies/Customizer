# Wiki: https://github.com/fluxer/Customizer/wiki
# Issues: https://github.com/fluxer/Customizer/issues
#
set -u
source /opt/Customizer/libs/source.lib
source /opt/Customizer/settings.conf

#################### Some functions used when error accures #####################

__create_work_dirs__() {
	INFO "Creating work directories"
	mkdir -p "$WORK_DIR/"{FileSystem,ISO} || ERROR "Unable to create working directories"
}

__clean__() {
	umount -fl "$MOUNT_DIR" 2> /dev/null
    __purge_work_dirs__
}

####################### Checking if the ISO image exists ########################

if [ ! -e "$ISO" ];then
	ERROR "The ISO image doesn't exists."
fi

################## Cleaning up previous temp folders if exists ##################

if [ -d "$WORK_DIR/FileSystem" ] || [ -d "$WORK_DIR/ISO" ];then
    __clean__
    __create_work_dirs__
else
	__create_work_dirs__
fi

############################# Mounting the ISO image #############################
MOUNT_DIR="`mktemp -d --tmpdir=\"$MOUNT_DIR\"`"

INFO "Mounting ISO"
mount -t iso9660 -o loop "$ISO" "$MOUNT_DIR" || ERROR "Unable to mount the ISO"

######################## Check if the ISO image is usable ########################

INFO "Checking ISO image"
if [ ! -d "$MOUNT_DIR/casper" ] || [ ! -d "$MOUNT_DIR/.disk" ] || \
 [ ! -d "$MOUNT_DIR/isolinux" ] || [ ! -e "$MOUNT_DIR/casper/filesystem.squashfs" ]; then
	ERROR_NO_EXIT "This is not a usable ISO image"
	__clean__
    exit 2
fi

######################### Extraction filesystem.squashfs ##########################

INFO "Extracting FileSystem"
unsquashfs -f -d "$WORK_DIR/FileSystem" "$MOUNT_DIR/casper/filesystem.squashfs" || ERROR "Unable to extract the filesystem.squashfs"

################## Check the architecture of the root filesystem ##################

INFO "Checking architecture"
ARCH=`chroot "$WORK_DIR/FileSystem" dpkg --print-architecture` || ERROR "Unable to chroot and get the architecture"
if [ "$ARCH" = "amd64" -o "" ] && [ "`uname -m`" != "x86_64" ]; then
	ERROR_NO_EXIT "The ISOs architecture is amd64 and yours is not"
	__clean__
    exit 2
fi


############ rsync the some files but exclude some that are not needed ############

INFO "Copying ISO files"
rsync --exclude=/casper/* --exclude=/md5sum.txt --exclude=/README.diskdefines -a "$MOUNT_DIR/" "$WORK_DIR/ISO" || ERROR "Unable to rsync files"

############################## Unmount the ISO image ##############################
INFO "Unmounting ISO"
umount -f "$MOUNT_DIR" || EXTRA_ERROR "Unable to unmount the ISO from" "$MOUNT_DIR"
rm -rf "$MOUNT_DIR"