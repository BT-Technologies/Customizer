' Gambas class file

PUBLIC SUB Form_Open()
  DIM HFColor, HBColor, HSColor, SplashFile AS Variant
  DIM WorkDir, tmpStr AS String
  
  ME.Center
  ME.Caption = "SysLinux"
  
  tmpStr = "WORK_DIR="
  WorkDir = Functions.Get_Conf(tmpStr)
  
  IF NOT Exist(WorkDir & "/ISO/isolinux/splash.pcx") AND NOT Exist(WorkDir & "/ISO/isolinux/splash.jpg") THEN
    Message.Warning("Splash file doesn't exists.")
    ChangePic.Enabled = FALSE
  ELSE 
    IF Exist(WorkDir & "/ISO/isolinux/splash.pcx") THEN
      SplashFile = "splash.pcx"
    ELSE 
      SplashFile = "splash.jpg"
    ENDIF 
    
    SplashPic.Picture = Picture.Load(WorkDir & "/ISO/isolinux/" & SplashFile)
  ENDIF 

  IF NOT Exist(WorkDir & "/ISO/isolinux/gfxboot.cfg") THEN 
    Message.Warning("gfxboot.cfg doesn't exists")
    SetColourMode.Enabled = FALSE
    ColorChooser1.Enabled = FALSE
  ELSE 
    SHELL "grep foreground= '" & WorkDir & "/ISO/isolinux/gfxboot.cfg' | sed 's/foreground=0x//'" TO HFColor
    SHELL "grep background= '" & WorkDir & "/ISO/isolinux/gfxboot.cfg' | sed 's/background=0x//'" TO HBColor
    SHELL "grep screen-colour= '" & WorkDir & "/ISO/isolinux/gfxboot.cfg' | sed 's/screen-colour=0x//'" TO HSColor
  
    Test.ForeColor = Val("&H" & HFColor) 
    Test.BackColor = Val("&H" & HBColor)
    Panel1.BackColor = Val("&H" & HSColor)
    ColorChooser1.ToolTip = "Change the colour used for " & SetColourMode.Text
  ENDIF 
  
  IF NOT Exist(WorkDir & "/ISO/isolinux/splash.pcx") AND NOT Exist(WorkDir & "/ISO/isolinux/splash.jpg") AND NOT Exist(WorkDir & "/ISO/isolinux/gfxboot.cfg") THEN
    Message.Error("Nothing to do here")
    ME.Close
  ENDIF 
END

PUBLIC SUB Quit_Click()
  ME.Close
END


PUBLIC SUB ChangePic_Click()
  DIM tmpStr, PIC, WorkDir, SplashFile AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Functions.Get_Conf(tmpStr)
  tmpStr = "PIC="
  PIC = Functions.Get_Conf(tmpStr)
  
  Dialog.Title = "Please select picture"
  Dialog.Filter = ["*.pcx;*.png;*.bmp;*.jpeg;*.jpg", "Pictures"]
  
  IF Exist(PIC) THEN
    Dialog.Path = PIC
  ELSE 
    Dialog.Path = "/home"
  ENDIF  
  
  IF Exist(WorkDir & "/ISO/isolinux/splash.pcx") THEN
      SplashFile = "splash.pcx"
  ELSE 
      SplashFile = "splash.jpg"
  ENDIF 
  
  IF Dialog.OpenFile() THEN RETURN 
  SHELL "sed -i 's@PIC=.*@PIC=\"" & Dialog.Path & "\"@' /opt/Customizer/settings.conf" WAIT
  SHELL "convert -resize 640x480! -colors 256 '" & Dialog.Path & "' '" & WorkDir & "/ISO/isolinux/" & SplashFile & "'" WAIT
  SplashPic.Picture = Picture.Load(WorkDir & "/ISO/isolinux/" & SplashFile)
END

PUBLIC SUB ColorChooser1_Change()
  DIM Colour, WorkDir AS Variant
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Functions.Get_Conf(tmpStr)
  
  Colour = Hex(ColorChooser1.Value, 6)
  
  SELECT CASE SetColourMode.Text
    CASE "Foreground"
    Test.ForeColor = ColorChooser1.Value
    SHELL "sed -i 's/foreground=0x.*/foreground=0x" & Colour & "/' '" & WorkDir & "/ISO/isolinux/gfxboot.cfg'" 
  CASE "Background"
    Test.BackColor = ColorChooser1.Value
    SHELL "sed -i 's/background=0x.*/background=0x" & Colour & "/' '" & WorkDir & "/ISO/isolinux/gfxboot.cfg'"
  CASE "Screen-Colour"
    Panel1.BackColor = ColorChooser1.Value
    SHELL "sed -i 's/screen-colour=0x.*/screen-colour=0x" & Colour & "/' '" & WorkDir & "/ISO/isolinux/gfxboot.cfg'"
  END SELECT
END

PUBLIC SUB SetColourMode_Click()
  ColorChooser1.ToolTip = "Change the colour used for " & SetColourMode.Text
END
