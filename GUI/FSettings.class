  ENDIF 
  
  IF Exist("/usr/bin/mousepad") THEN
    EditorBox.Add("mousepad")
  ENDIF 
  
  IF Exist("/usr/bin/leafpad") THEN
    EditorBox.Add("leafpad")
  ENDIF 
  
  IF Exist("/usr/bin/geany") THEN
    EditorBox.Add("geany")
  ENDIF 
  
  IF Exist("/usr/bin/emacs") THEN
    EditorBox.Add("emacs")
  ENDIF 
  
  IF Exist("/usr/bin/kate") THEN
    EditorBox.Add("kate")
  ENDIF 
  
  IF Exist("/usr/bin/kwrite") THEN
    EditorBox.Add("kwrite")
  ENDIF 
  
  IF Exist("/usr/bin/bluefish") THEN
    EditorBox.Add("bluefish")
  ENDIF 
  
  IF Exist("/usr/bin/ultraedit") THEN
    EditorBox.Add("ultraedit")
  ENDIF 
  
  IF Exist("/usr/bin/scite") THEN
    EditorBox.Add("scite")
  ENDIF 
  
  IF Exist("/usr/bin/vi") THEN
    EditorBox.Add("vi")
  ENDIF 
  
  IF Exist("/usr/bin/vim") THEN
    EditorBox.Add("vim")
  ENDIF 
  
  IF Exist("/usr/bin/nano") THEN
    EditorBox.Add("nano")
  ENDIF 
  
  IF Exist("/usr/bin/pico") THEN
    EditorBox.Add("pico")
  ENDIF 
  
  tmpStr = "WORK_DIR="
  WDir = Functions.Get_Conf(tmpStr)
  tmpStr = "MOUNT_DIR="
  MDir = Functions.Get_Conf(tmpStr)
  tmpStr = "APPEND_TITLE="
  ATitle = Functions.Get_Conf(tmpStr)
  tmpStr = "MESSAGES_COLORS="
  UColors = Functions.Get_Conf(tmpStr)
  tmpStr = "FORCE_CHROOT="
  FChroot = Functions.Get_Conf(tmpStr)
  tmpStr = "APT_HELPER="
  AHelper = Functions.Get_Conf(tmpStr)
  tmpStr = "EDITOR="
  Edit = Functions.Get_Conf(tmpStr)
  tmpStr = "BOOT_FILES="
  BFiles = Functions.Get_Conf(tmpStr)
  tmpStr = "VRAM="
  VRam = Functions.Get_Conf(tmpStr)
  tmpStr = "COMPRESSION="
  Res = Functions.Get_Conf(tmpStr)
  tmpStr = "COMPRESSION="
  SComp = Functions.Get_Conf(tmpStr)

  TRY WorkDir.Text = WDir
  TRY MountDir.Text = MDir
  TRY AppendTitle.Value = ATitle
  TRY UseColors.Value = UColors
  TRY ForceChroot.Value = FChroot
  TRY AptHelper.Value = AHelper
  TRY EditorBox.Text = Edit
  TRY BootFiles.Value = BFiles
  TRY VirtualMemBox.Text = VRam
  TRY ResolutionBox.Text = Res
  TRY CompressionBox.Text = SComp
  
  IF FMain.Build_ISO.Enabled = TRUE THEN 
    Message.Warning("Changing the working directory while in the middle of\ncustomization proccess is a stupid idea! To prevent you\nfrom doing so and probably harm your host OS this feature\nwill be disabled and you will have to clean to change it.")
    Change_WDir.Enabled = FALSE
    Change_WDir.ToolTip = "Changing the working directory is not possible at that state!"
  ENDIF 
END

PUBLIC SUB AppendTitle_Click()
  IF AppendTitle.Value = 0 THEN 
    SHELL "sed -i 's/APPEND_TITLE=.*/APPEND_TITLE=0/' /opt/Customizer/settings.conf"
  ELSE 
    SHELL "sed -i 's/APPEND_TITLE=.*/APPEND_TITLE=1/' /opt/Customizer/settings.conf"
  ENDIF 
END

