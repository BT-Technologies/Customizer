' Gambas class file


PUBLIC SUB Form_Open()
  ME.Center
  ME.Caption = "Settings"
  
  Check.Conf_File()
  
  IF Exist("/usr/bin/gedit") THEN
    EditorBox.Add("gedit")
  ENDIF 

  IF Exist("/usr/bin/medit") THEN
    EditorBox.Add("medit")
  ENDIF 
  
  IF Exist("/usr/bin/nedit") THEN
    EditorBox.Add("nedit")
  ENDIF 
  
  IF Exist("/usr/bin/mousepad") THEN
    EditorBox.Add("mousepad")
  ENDIF 
  
  IF Exist("/usr/bin/leafpad") THEN
    EditorBox.Add("leafpad")
  ENDIF 
  
  IF Exist("/usr/bin/geany") THEN
    EditorBox.Add("geany")
  ENDIF 
  
  IF Exist("/usr/bin/emacs") THEN
    EditorBox.Add("emacs")
  ENDIF 
  
  IF Exist("/usr/bin/kate") THEN
    EditorBox.Add("kate")
  ENDIF 
  
  IF Exist("/usr/bin/kwrite") THEN
    EditorBox.Add("kwrite")
  ENDIF 
  
  IF Exist("/usr/bin/bluefish") THEN
    EditorBox.Add("bluefish")
  ENDIF 
  
  IF Exist("/usr/bin/ultraedit") THEN
    EditorBox.Add("ultraedit")
  ENDIF 
  
  IF Exist("/usr/bin/scite") THEN
    EditorBox.Add("scite")
  ENDIF 
  
  IF Exist("/usr/bin/vi") THEN
    EditorBox.Add("vi")
  ENDIF 
  
  IF Exist("/usr/bin/vim") THEN
    EditorBox.Add("vim")
  ENDIF 
  
  IF Exist("/usr/bin/nano") THEN
    EditorBox.Add("nano")
  ENDIF 
  
  IF Exist("/usr/bin/pico") THEN
    EditorBox.Add("pico")
  ENDIF 
  
  TRY WorkDir.Text = Functions.Get_Conf("WORK_DIR=", "/home")
  TRY MountDir.Text = Functions.Get_Conf("MOUNT_DIR=", "/media/ISO")
  TRY AppendTitle.Value = Functions.Get_Conf("APPEND_TITLE=", "1")
  TRY UseColors.Value = Functions.Get_Conf("MESSAGES_COLORS=", "1")
  TRY ForceChroot.Value = Functions.Get_Conf("FORCE_CHROOT=", "0")
  TRY AptHelper.Value = Functions.Get_Conf("APT_HELPER=", "1")
  TRY EditorBox.Text = Functions.Get_Conf("EDITOR=", "nano")
  TRY BootFiles.Value = Functions.Get_Conf("BOOT_FILES=", "0")
  TRY VirtualMemBox.Text = Functions.Get_Conf("VRAM=", "256")
  TRY ResolutionBox.Text = Functions.Get_Conf("RESOLUTION=", "800x600")
  TRY CompressionBox.Text = Functions.Get_Conf("COMPRESSION=", "tar")
  
  IF FMain.Build_ISO.Enabled = TRUE THEN 
    Message.Warning("Changing the working directory while in the middle of\ncustomization proccess is a stupid idea! To prevent you\nfrom doing so and probably harm your host OS this feature\nwill be disabled and you will have to clean to change it.")
    Change_WDir.Enabled = FALSE
    Change_WDir.ToolTip = "Changing the working directory is not possible at that state!"
  ENDIF 
END

PUBLIC SUB AppendTitle_Click()
  IF AppendTitle.Value = 0 THEN 
    Functions.Replace_Conf("APPEND_TITLE=", "0")
  ELSE 
    Functions.Replace_Conf("APPEND_TITLE=", "1")
  ENDIF 
END

