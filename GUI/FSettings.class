PUBLIC SUB Change_WDir_Click()
  DIM WDir AS String

  WDir = Functions.Get_Conf("WORK_DIR=", "/home")
  
  Dialog.Title = "Please, select work directory"
  
  IF Exist(WDir) THEN 
    Dialog.Path = WDir
  ELSE 
    Dialog.Path = "/home"
  ENDIF 
  
  IF Dialog.SelectDirectory() THEN RETURN 
  Functions.Replace_Conf("WORK_DIR=", Dialog.Path)
  WorkDir.Text = Dialog.Path
END

PUBLIC SUB Change_MDir_Click()
  DIM MDir AS String
  
  MDir = Functions.Get_Conf("MOUNT_DIR=", "/media/ISO")
  
  Dialog.Title = "Please, select work directory"
  
  IF Exist(MDir) THEN 
    Dialog.Path = MDir
  ELSE 
    Dialog.Path = "/home"
  ENDIF 
  
  IF Dialog.SelectDirectory() THEN RETURN 
  Functions.Replace_Conf("MOUNT_DIR=", Dialog.Path)
  MountDir.Text = Dialog.Path
END

PUBLIC SUB CompressionBox_Click()
  Functions.Replace_Conf("COMPRESSION=", CompressionBox.Text)
END

PUBLIC SUB Quit_Click()
  ME.Close
END
