PUBLIC SUB UseColors_Click()
  IF UseColors.Value = 0 THEN
    Func.Replace_Str("/opt/Customizer/settings.conf", "MESSAGES_COLORS=", "0")
  ELSE
    Func.Replace_Str("/opt/Customizer/settings.conf", "MESSAGES_COLORS=", "1")
  ENDIF
END

