' Gambas class file


PUBLIC SUB Form_Open()
  DIM zone, Frame, CurrentTTYs, CurrentShell AS String
  DIM WorkDir AS String
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Module.SearchForConf(tmpStr)
  
  ME.Center
  ME.Caption = "Tweaks"
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Africa/").Sort()
    TimeZone.Add("Africa/" & zone)
  NEXT

  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/America/Argentina/").Sort()
    TimeZone.Add("America/Argentina/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/America/Indiana/").Sort()
    TimeZone.Add("America/Indiana/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/America/Kentucky/").Sort()
    TimeZone.Add("America/Kentucky/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/America/North_Dakota/").Sort()
    TimeZone.Add("America/North_Dakota/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/America/").Sort()
    TimeZone.Add("America/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Antarctica/").Sort()
    TimeZone.Add("Antarctica/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Arctic/").Sort()
    TimeZone.Add("Arctic/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Asia/").Sort()
    TimeZone.Add("Asia/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Atlantic/").Sort()
    TimeZone.Add("Atlantic/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Brazil/").Sort()
    TimeZone.Add("Brazil/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Canada/").Sort()
    TimeZone.Add("Canada/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Chile/").Sort()
    TimeZone.Add("Chile/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Europe/").Sort()
    TimeZone.Add("Europe/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Indian/").Sort()
    TimeZone.Add("Indian/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Mexico/").Sort()
    TimeZone.Add("Mexico/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Mideast/").Sort()
    TimeZone.Add("Mideast/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Pacific/").Sort()
    TimeZone.Add("Pacific/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/US/").Sort()
    TimeZone.Add("US/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/SystemV/").Sort()
    TimeZone.Add("SystemV/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/Etc/").Sort()
    TimeZone.Add("Etc/" & zone)
  NEXT
  
  FOR EACH zone IN Dir(WorkDir & "/FileSystem/usr/share/zoneinfo/").Sort()
    TimeZone.Add(zone)
  NEXT
  
  IF Exist(WorkDir & "/FileSystem/etc/apt/apt.conf") THEN
    APT_Recommends.Value = FALSE
  ELSE 
    APT_Recommends.Value = TRUE
  ENDIF 
  
  IF Exist(WorkDir & "/FileSystem/usr/share/initramfs-tools/conf-hooks.d/casper") THEN 
    SHELL "grep FRAMEBUFFER= '" & WorkDir & "/FileSystem/usr/share/initramfs-tools/conf-hooks.d/casper' | sed 's/FRAMEBUFFER=//'" TO Frame
  
    IF Trim(Frame) = "y" THEN 
      Framebuffer.Value = TRUE
    ELSE 
      Framebuffer.Value = FALSE
    ENDIF 
  ELSE 
    Message.Warning("The casper hook file doesn't exist! You will\nnot be able to choose wheter to use or not framebuffer.")
    Framebuffer.Enabled = FALSE
  ENDIF 
  
  SHELL "grep ACTIVE_CONSOLES= '" & WorkDir & "/FileSystem/etc/default/console-setup' | sed 's/ACTIVE_CONSOLES=\"\\/dev\\/tty\\[1-//;s/]\"//'" TO CurrentTTYs
  TTYs.Text = Trim(CurrentTTYs)
  PRINT Trim(CurrentTTYs)
  
  IF Exist(WorkDir & "/FileSystem/bin/ash") THEN 
    SShell.Add("/bin/ash")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/sh") THEN 
    SShell.Add("/bin/sh")
  ENDIF 
  
  IF Exist(WorkDir & "/FileSystem/bin/csh") THEN 
    SShell.Add("/bin/csh")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/ksh") THEN 
    SShell.Add("/bin/ksh")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/mksh") THEN 
    SShell.Add("/bin/mksh")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/tcsh") THEN 
    SShell.Add("/bin/tcsh")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/bash") THEN 
    SShell.Add("/bin/bash")
  ENDIF 
  
  IF Exist(WorkDir & "/FileSystem/bin/dash") THEN 
    SShell.Add("/bin/dash")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/psh") THEN 
    SShell.Add("/bin/psh")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/zsh") THEN 
    SShell.Add("/bin/zsh")
  ENDIF
  
  IF Exist(WorkDir & "/FileSystem/bin/yash") THEN 
    SShell.Add("/bin/yash")
  ENDIF
  
  SHELL "grep DSHELL= '" & WorkDir & "/FileSystem/etc/adduser.conf' | sed 's/DSHELL=//'" TO CurrentShell
  SShell.Text = Trim(CurrentShell)
  
  TRY TimeZone.Text = File.Load(WorkDir & "/FileSystem/etc/timezone")
END

PUBLIC SUB APT_Recommends_Click()
  DIM WorkDir AS String
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Module.SearchForConf(tmpStr)
  
  IF APT_Recommends.Value = TRUE THEN
    EXEC ["rm", "-f", WorkDir & "/FileSystem/etc/apt/apt.conf"]
  ELSE 
    SHELL "echo 'APT::Install-Recommends \"false\";' > '" & WorkDir & "/FileSystem/etc/apt/apt.conf' && echo 'APT::Install-Suggests \"false\";' >> '" & Trim(WorkDir) & "/FileSystem/etc/apt/apt.conf'"
  ENDIF 
END


PUBLIC SUB TimeZone_Click()
  DIM WorkDir AS String
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Module.SearchForConf(tmpStr)
  TRY File.Save(WorkDir & "/FileSystem/etc/timezone", TimeZone.Text)
END


PUBLIC SUB Framebuffer_Click()
  DIM WorkDir AS String
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Module.SearchForConf(tmpStr)
  
  IF Framebuffer.Value = TRUE THEN 
    SHELL "sed -i 's/FRAMEBUFFER=.*/FRAMEBUFFER=y/' '" & WorkDir & "/FileSystem/usr/share/initramfs-tools/conf-hooks.d/casper'"
  ELSE 
    SHELL "sed -i 's/FRAMEBUFFER=.*/FRAMEBUFFER=n/' '" & WorkDir & "/FileSystem/usr/share/initramfs-tools/conf-hooks.d/casper'"
  ENDIF 
END

PUBLIC SUB Quit_Click()
  ME.Close
END

PUBLIC SUB TTYs_Click()
  DIM ReplaceString AS String
  DIM WorkDir AS String
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Module.SearchForConf(tmpStr)
   
  ReplaceString = "\"\\/dev\\/tty[1-" & TTYs.Text & "]\""
  SHELL "sed -i 's/ACTIVE_CONSOLES=.*/ACTIVE_CONSOLES=" & ReplaceString & "/' '" & WorkDir & "/FileSystem/etc/default/console-setup'"
END

PUBLIC SUB SShell_Click()
  DIM ReplaceString AS String
  DIM WorkDir AS String
  DIM tmpStr AS String
  
  tmpStr = "WORK_DIR="
  WorkDir = Module.SearchForConf(tmpStr)
  
  SELECT CASE SShell.Text
    CASE "/bin/ash"
      ReplaceString = "\\/bin\\/ash"
    CASE "/bin/sh"
      ReplaceString = "\\/bin\\/sh"
    CASE "/bin/csh"
      ReplaceString = "\\/bin\\/csh"
    CASE "/bin/ksh"
      ReplaceString = "\\/bin\\/ksh"
    CASE "/bin/mksh"
      ReplaceString = "\\/bin\\/mksh"
    CASE "/bin/tcsh"
      ReplaceString = "\\/bin\\/tcsh"
    CASE "/bin/bash"
      ReplaceString = "\\/bin\\/bash"
    CASE "/bin/dash"
      ReplaceString = "\\/bin\\/dash"
    CASE "/bin/psh"
      ReplaceString = "\\/bin\\/psh"
    CASE "/bin/zsh"
      ReplaceString = "\\/bin\\/zsh"
    CASE "/bin/yash"
      ReplaceString = "\\/bin\\/yash"
  END SELECT 

  SHELL "sed -i 's/DSHELL=.*/DSHELL=" & ReplaceString & "/' '" & WorkDir & "/FileSystem/etc/adduser.conf'"
END
